<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Notes App</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen">
    <div class="p-10 max-w-5xl mx-auto">
        <h1 class="text-3xl mb-6 font-bold">Notes App</h1>

        <!-- CREATE NOTE FORM -->
        <form action="/create" method="post" class="mb-10">
            <input class="block w-full mb-2 px-4 py-2 rounded bg-zinc-800" type="text" name="Title"
                placeholder="Note Title" required>

            <textarea class="block w-full px-4 py-2 rounded bg-zinc-800 resize-none" name="details"
                placeholder="Write your note..." required></textarea>

            <button class="mt-3 px-5 py-2 bg-blue-600 rounded">
                Create Note
            </button>
        </form>

        <!-- NOTES LIST -->
        <div class="flex gap-4 flex-wrap">
            <% if (files.length> 0) { %>
                <% files.forEach(function(file) { %>
                    <div class="bg-zinc-800 p-4 rounded w-64">
                        <h2 class="text-xl mb-2">
                            <%= file %>
                        </h2>
                        
                        <a href="/read/<%= file %>" class="text-blue-500 block">
                            Read
                        </a>

                        <a href="/delete/<%= file %>" class="text-red-400 block mt-1">
                            Delete
                        </a>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="text-zinc-400">No notes yet.</p>
                            <% } %>
        </div>
    </div>
</body>

</html>